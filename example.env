# Database
DB_PASSWORD=postgres
DB_NAME=boardgame_event
DB_PORT=5456

# Authentication
EVENT_PASSWORD=your-secret-password

# JWT Secret for account authentication
# IMPORTANT: Change this to a strong random string (min 32 chars) in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-to-a-strong-random-string-min-32-chars

# Event Token Expiry â€” how long event auth JWTs remain valid (e.g. '7d', '24h')
# Defaults to 7 days if not set
EVENT_TOKEN_EXPIRY=7d

# Default admin account (created on first boot if no admin exists)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin

# Event Configuration
EVENT_NAME=Brettspiel-Event

# Ports
API_PORT=3006
FRONTEND_PORT=8086

# CORS - allow requests from any origin (or specify allowed origins)
CORS_ORIGIN=*

# Frontend API URL - set to your machine's IP for cross-device access
# Example: VITE_API_URL=http://192.168.1.100:3006
VITE_API_URL=http://localhost:3006

# BGG Image Thumbnails
SCRAPER_API_KEY=your-scraper-api-key
BGG_SCRAPE_ENABLED=true
BGG_IMAGE_CACHE_DIR=/app/cache/bgg-images

# Crawler Service (optional)
# Docker: http://crawler:3001
# Local API: http://localhost:9101
CRAWLER_URL=http://crawler:3001

# Apify Proxy (optional - for crawler service)
# If APIFY_PROXY_PASSWORD is set, the crawler will route traffic via Apify Proxy.
APIFY_PROXY_PASSWORD=
# Optional overrides for Apify Proxy username construction.
# If APIFY_PROXY_USERNAME is set, it will be used as-is.
APIFY_PROXY_USERNAME=
APIFY_PROXY_GROUPS=
APIFY_PROXY_COUNTRY=
APIFY_PROXY_SESSION=
APIFY_PROXY_HOSTNAME=proxy.apify.com
APIFY_PROXY_PORT=8000
